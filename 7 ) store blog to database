from fastapi import FastAPI , Depends # and this one is import
from database import engine , SessionLocal # this is import
from sqlalchemy.orm import Session # this one is import




def get_db():
    db = SessionLocal()
    try:
        yield  db
    finally:
        db.close()


@app.post("/blog")
def create(request:schemas.Blog , db:Session = Depends(get_db)):
    new_blog = models.Blog( body = request.body)
    db.add(new_blog)
    db.commit()
    db.refresh(new_blog)
    return new_blog
